{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "declaration-no-important": null,
    "no-descending-specificity": null,
    "no-duplicate-selectors": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["custom-variant", "theme"]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "build/**/*",
    "dist/**/*"
  ]
}
